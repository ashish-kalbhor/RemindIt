<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/MediumOrchid"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.ashish.remindit.GetStarted" >

      <EditText
          android:id="@+id/textNote"
          android:layout_width="180dp"
          android:layout_height="wrap_content"
          android:layout_alignParentRight="true"
          android:layout_alignTop="@+id/tvNote"
          android:background="@color/Wheat"
          android:layout_toRightOf="@+id/tvNote"
          android:ems="10"
          android:inputType="textMultiLine" />

      <TextView
          android:id="@+id/tvNote"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignParentTop="true"
          android:layout_marginTop="52dp"
          android:layout_toLeftOf="@+id/btReminder"
          android:text="@string/reminder_note" />

      <Button
          android:id="@+id/btReminder"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_below="@+id/chkSetAlarm"
          android:layout_centerHorizontal="true"
          android:layout_marginTop="41dp"
          android:background="@color/DarkSalmon"
          android:text="@string/set_reminder" />

      <CheckBox
          android:id="@+id/chkSetAlarm"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_below="@+id/btWhen"
          android:layout_centerHorizontal="true"
          android:layout_marginTop="63dp"
          android:background="@color/MediumOrchid"
          android:text="@string/set_alarm" />

      <Button
          android:id="@+id/btWhen"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_below="@+id/tvNote"
          android:layout_centerHorizontal="true"
          android:layout_marginTop="35dp"
          android:background="@color/DarkSalmon"
          android:text="@string/when" />

</RelativeLayout>
